{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/__tests__/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts", 
    "src/**/*.spec.tsx",
    "vitest.config.ts"
  ],
  "exclude": []
}